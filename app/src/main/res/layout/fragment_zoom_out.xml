<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.guideFragments.ZoomOutFragment"
    android:background="@color/white"
    android:padding="16dp"
    android:layoutDirection="rtl"
    android:gravity="end">

    <!-- Title text explaining the action -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="תנועת ה- grip להקטנה"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/primaryTextColor"
        android:layout_gravity="top|center_horizontal"
        android:paddingTop="16dp"
        android:fontFamily="@font/rubik_medium"/>

    <!-- Image illustrating the gesture (transparent background) -->
    <ImageView
        android:id="@+id/zoomImage"
        android:layout_width="190dp"
        android:layout_height="180dp"
        android:src="@drawable/grip"
        android:layout_gravity="center"
        android:contentDescription="תנועת grip להקטנה" />

    <!-- Arrow icon indicating zoom out action -->
    <ImageView
        android:id="@+id/arrowImage"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/zoom_out"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="32dp"/>

    <!-- Short description explaining the gesture -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="השתמשו בתנועת grip כדי להקטין את הדף"
        android:textSize="16sp"
        android:textColor="@color/primaryTextColor"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textAlignment="center"
        android:fontFamily="@font/rubik_medium"/>

</FrameLayout>
