<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.guideFragments.OpenPalmFragment"
    android:background="@color/white"
    android:padding="16dp"
    android:layoutDirection="rtl"
    android:gravity="end">

    <!-- Title text explaining the action -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="תנועת ה- point לעצירה"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/primaryTextColor"
        android:layout_gravity="top|center_horizontal"
        android:paddingTop="16dp"
        android:fontFamily="@font/rubik_medium"/>

    <!-- Image representing the point gesture -->
    <ImageView
        android:layout_width="190dp"
        android:layout_height="180dp"
        android:background="@drawable/point"
        android:layout_gravity="center" />

    <!-- Icon indicating the stopping gesture -->
    <ImageView
        android:id="@+id/arrowImage"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/tap"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="48dp"/>

    <!-- Short description explaining the gesture -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="השתמשו בתנועת point כדי לעצור את הזיהוי תנועות ידיים"
        android:textSize="16dp"
        android:textColor="@color/primaryTextColor"
        android:gravity="center"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/rubik_medium"/>

</FrameLayout>
